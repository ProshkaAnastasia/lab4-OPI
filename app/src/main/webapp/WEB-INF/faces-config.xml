<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns = "https://jakarta.ee/xml/ns/jakartaee"
   						xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
   						xsi:schemaLocation = "https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
                        version="5.0">
    <navigation-rule>
		<from-view-id>/views/index.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToMain</from-outcome>
			<to-view-id>/views/main.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
        <navigation-case>
			<from-outcome>goToIndex</from-outcome>
			<to-view-id>/views/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToTest</from-outcome>
			<to-view-id>/views/test.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

    <navigation-rule>
		<from-view-id>/views/main.xhtml</from-view-id>
        <navigation-case>
			<from-outcome>goToMain</from-outcome>
			<to-view-id>/views/main.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>in_form</from-outcome>
			<to-view-id>/views/authorization.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>reg_form</from-outcome>
			<to-view-id>/views/registration.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
        <navigation-case>
			<from-outcome>goToIndex</from-outcome>
			<to-view-id>/views/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{pointList.processAreaRequest()}</from-action>
            <to-view-id>/views/main.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/views/test.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToMain</from-outcome>
			<to-view-id>/views/main.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
        <navigation-case>
			<from-outcome>goToIndex</from-outcome>
			<to-view-id>/views/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToTest</from-outcome>
			<to-view-id>/views/test.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{pointList.processAreaRequest()}</from-action>
            <to-view-id>/views/test.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/views/authorization.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToReg</from-outcome>
			<to-view-id>/views/registration.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/views/registration.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToAuth</from-outcome>
			<to-view-id>/views/authorization.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{userBean.register}</from-action>
			<from-outcome>success</from-outcome>
            <to-view-id>/views/main.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/views/lab3.xhtml</from-view-id>
        <navigation-case>
			<from-outcome>goToMain</from-outcome>
			<to-view-id>/views/main.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>in_form</from-outcome>
			<to-view-id>/views/authorization1.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>reg_form</from-outcome>
			<to-view-id>/views/registration1.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
        <navigation-case>
			<from-outcome>goToIndex</from-outcome>
			<to-view-id>/views/index.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToTest</from-outcome>
			<to-view-id>/views/test.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-action>#{pointList.processAreaRequest()}</from-action>
            <to-view-id>/views/main.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/views/authorization1.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToReg</from-outcome>
			<to-view-id>/views/registration1.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>goToMain</from-outcome>
			<to-view-id>/views/lab3.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/views/registration1.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>goToAuth</from-outcome>
			<to-view-id>/views/authorization1.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>

</faces-config>